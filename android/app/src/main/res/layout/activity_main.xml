<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:contentDescription="Background" />

    <!-- Dim Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp">

            <!-- Glass Panel Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/glassPanelCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                app:cardBackgroundColor="@color/glass_panel"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="400dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Icon Container -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/icon_circle_background">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:contentDescription="Video Call Icon"
                            android:src="@drawable/camera_fill"
                            android:tint="@color/primary" />
                    </FrameLayout>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:letterSpacing="0.01"
                        android:text="Join Meeting"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="32dp"
                        android:lineSpacingExtra="2dp"
                        android:text="Enter a room number to join an existing call\nor start a random one."
                        android:textAlignment="center"
                        android:textColor="@color/white_60"
                        android:textSize="14sp" />

                    <!-- Input Container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <!-- Hash Icon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="16dp"
                            android:text="#"
                            android:textColor="@color/white_30"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <!-- Room Number Input -->
                        <EditText
                            android:id="@+id/roomIDText"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/input_background"
                            android:gravity="center"
                            android:hint="Room Number"
                            android:inputType="number"
                            android:letterSpacing="0.1"
                            android:paddingHorizontal="48dp"
                            android:paddingVertical="16dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_20"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <!-- Join Room Button -->
                    <Button
                        android:id="@+id/btnJoin"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_primary_background"
                        android:drawableEnd="@drawable/arrow_right"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:text="Join Room"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- OR Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/white_10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.1"
                            android:paddingHorizontal="12dp"
                            android:text="OR"
                            android:textColor="@color/white_30"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/white_10" />
                    </LinearLayout>

                    <!-- Join Random Room Button -->
                    <Button
                        android:id="@+id/btnRandom"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_secondary_background"
                        android:drawableStart="@drawable/shuffle"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/white_60"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:text="Join Random Room"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- App Name at Bottom -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebRTC Demo App"
                android:textColor="@color/white_20"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
